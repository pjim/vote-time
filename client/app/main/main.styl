$color-primary-2 = #817a65
$color-primary-3 = #928768
$color-primary-4 = #9f9065
$color-secondary-1-0 = #463f49
// Main Secondary color (1) */
$color-secondary-1-1 = #85798b
$color-secondary-1-2 = #514456
