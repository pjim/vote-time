.thing-form
    margin 20px 0

#banner
    border-bottom none
    margin-top -20px
    background-color $color-primary-0
    color $color-primary-1
#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center

.navbar-text
    margin-left 15px

.navbar
  background-color $color-secondary-1-2

.second-header
  position relative
  top 13px

.navbar li
   color $color-primary-1

.surround
   border 2px solid black
   border-radius 20px

.col-center
   margin auto
   float none

.top-buffer
  margin-top 20px
