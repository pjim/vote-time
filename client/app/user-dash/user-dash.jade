div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-md-6.col-md-offset-3
       h2 Welcome to your dashboard
       p    Here you can add new polls and see your existing polls
  .row
     .col-md-6
        button(ng-click='showPollForm()') New Poll
        .add-poll(ng-show="newPoll")
          form(ng-submit="addPoll($event)" class="form")
            label Poll Question
            input(type="text",placeholder="Add your poll question" ng-model="pollQuestion" class="form-control")
            label Options
            input(ng-repeat="option in options" type="text", ng-model="option.opt" placeholder="" class="form-control" )
            input(type="submit" value="submit")
            button(class="btn" ng-click="addOption($event)") Add another option

            button(class="btn" ng-click="removeOption($event)") Remove an option

     .col-md-6
       button(ng-click='showUsersPolls()') View Polls
       .view-polls(ng-show="viewPoll")
          div(ng-repeat="poll in thisUsersPolls")
            voter(poll="poll")

  .row.top-buffer
   .col-md-12

    button(class="btn") Delete Polls
    .delete-section
           p here you can delete existing polls
           div(ng-repeat="poll in fullUsersPolls")
             p {{poll.question}}
              button(ng-click="deletePoll(poll)") delete
